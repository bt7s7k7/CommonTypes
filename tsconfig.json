{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/commonTypes",
        "src/path",
        "src/registry",
    ]
}
